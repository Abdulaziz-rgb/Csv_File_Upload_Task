@model HomeEditViewModel;

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css"/>
@{
    ViewBag.Title = "Edit Employee";
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
}

<form asp-controller="home" asp-action="edit" method="post" class="mt-3">
    <input hidden asp-for="PayrollNumber" />
    <div class="form-group row">
        <label asp-for="Forename" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Forename" placeholder="First Name..." />
            <span asp-validation-for="Forename" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Surname" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Surname" placeholder="Last Name..." />
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="DateOfBirth" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="date" value=@Model.DateOfBirth asp-for="DateOfBirth" placeholder="Birth date..." />
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Telephone" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Telephone" placeholder="Telephone..." />
            <span asp-validation-for="Telephone" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Mobile" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Mobile" placeholder="Mobile..." />
            <span asp-validation-for="Mobile" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Address" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Address" placeholder="Address..." />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="City" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="City" placeholder="City..." />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Postcode" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Postcode" placeholder="Postcode..." />
            <span asp-validation-for="Postcode" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" placeholder="Email..." />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="StartDate" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="date" value=@Model.StartDate asp-for="StartDate" placeholder="Start date..." />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
    </div>
    <div class="mt-5">
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-outline-success">Update</button>
                <a asp-controller="home" asp-action="index" class="btn btn-outline-warning">Back to main page</a>
            </div>
        </div>
    </div>
</form>

